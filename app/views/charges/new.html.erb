 <%= form_tag charges_path do %>
   <%= hidden_field_tag :amount, @stripe_btn_data[:amount] %>
 
   <h4>Click the button!</h4>
   <script class='stripe-button' src="https://checkout.stripe.com/checkout.js" 
    data-key="<%= @stripe_btn_data[:key] %>" data-amount=<%= @stripe_btn_data[:amount] %> 
    data-description="<%= @stripe_btn_data[:description] %>" 
    data-email="<%= current_user.email %>"></script>
 <% end %>