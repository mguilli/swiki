= form_for @wiki do |f|
  - if @wiki.errors.any?
    #error_explanation
      %h2= "#{pluralize(@wiki.errors.count, "error")} prohibited this wiki from being saved:"
      %ul
        - @wiki.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_field :body
  - case @switch when "edit"
    - if policy(@wiki).make_private_edit?
      .field
        = f.label :public
        = f.check_box :public
  - when "new"
    - if policy(@wiki).make_private_new?
      .field
        = f.label :public
        = f.check_box :public
  - else

  .actions
    = f.submit 'Save'
